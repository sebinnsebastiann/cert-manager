{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": {
                "Federated": "arn:aws:iam::<accountid>:oidc-provider/oidc.eks.<region>.amazonaws.com/id/<oidc_id>"
            },
            "Action": "sts:AssumeRoleWithWebIdentity",
            "Condition": {
                "StringEquals": {
                    "oidc.eks.<region>.amazonaws.com/id/<oidc_id>:aud": "sts.amazonaws.com",
                    "oidc.eks.<region>.amazonaws.com/id/<oidc_id>:sub": "system:serviceaccount:<serviceaccountnamespace>:<serviceaccountfor certmanager>"
                }
            }
        }
    ]
}
